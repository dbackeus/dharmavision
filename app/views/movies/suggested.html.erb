<% page_title "Suggested movies" %>

<%= render "tabs" %>

<h1>Suggested movies</h1>

<p>
  Here are the movies that have been suggested but have not yet received the 5 ratings
  required to make it into the top 108. Please consider rating some of them to get
  them into the list!
</p>

<table class="table movie-table table-striped">
  <tbody>
    <% @movies.each_with_index do |movie, index| %>
      <tr>
        <td class="movie-table-poster">
          <%= link_to image_tag(movie.poster_url(92)), movie if movie.poster_url.present? %>
        </td>
        <td class="movie-table-title">
          <%= link_to movie.title, movie %> (<%= movie.year %>)
        </td>
        <td class="movie-table-ranking">
          <span class="deemphasize">
            <%= image_tag "/images/raty/star-on.png" %>
          </span>
          <%= movie.ratings_count %><span class="deemphasize">/5 ratings</span>
        </td>
        <td class="movie-table-mpaa">
          <%= image_tag "ratings/#{movie.mpaa_rating}.png", title: long_rating(movie.mpaa_rating) if movie.mpaa_rating %>
        </td>
        <% if admin? %>
          <td class="hidden-xs">
              <%= link_to "Destroy", movie, method: :delete, data: { confirm: "Delete #{movie.title}?" } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
