<p>
  <%= link_back("Back to list", if: request.referer.to_s[suggested_movies_path], else: movies_path) %>
</p>

<h1>Suggest a Movie</h1>

<div class="form-group has-feedback" style="position: relative;">
  <label class="control-label" for="tmdb-title">Title</label>
  <input class="form-control" type="text" id="tmdb-title" autocomplete="off">
  <ul id="tmdb-search-results" class="search-result-list dropdown-menu">
  </ul>
  <span class="form-control-feedback" aria-hidden="true">
    <%= image_tag "spinner.gif" %>
  </span>
  <p class="help-block">
    Start typing the name of the movie you wish to add and select it from the list fetched from
    <a href="https://www.themoviedb.org" target="_blank">themoviedb.org</a>
  </p>
</div>
