<h1>New Movie</h1>

<div class="form-group">
  <label class="control-label" for="imdb-title">Title</label>
  <input class="form-control" type="text" id="imdb-title">
  <ul class="dropdown-menu" id="imdb-title-suggestions"></ul>
</div>

<%= simple_form_for @movie do |f| %>
  <%= f.input :imdb_id, as: :hidden %>

  <%= f.button :submit, id: "movie-submit", class: "btn-primary", disabled: true %>
<% end %>

<%= link_to 'Back', movies_path %>
