<h1><%= @movie.title %></h1>

<%= simple_format @movie.plot %>

<div class="big-rating-star">
  <%= @movie.average_rating %>
</div>

<% if user_signed_in? %>
  <strong>Your rating:</strong>
  <div data-raty data-movie-id="<%= @movie.id %>" data-score="<%= user_rating.rating || 0 %>"></div>
  <div id="rating-target"></div>
<% end %>

<%= link_to image_tag("imdb-logo.png"), "http://www.imdb.com/title/tt#{@movie.imdb_id}/", target: "_blank", class: "imdb-link" %>

<p><%= link_to "Back", movies_path %></p>
