<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("navbar-brand-logo.png", class: "navbar-brand-logo"), movies_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Movies", movies_path %>
            </li>
          </ul>

          <form action="<%= search_movies_path %>" class="navbar-form navbar-left" role="search">
            <div class="form-group has-feedback">
              <label for="movie-search" class="sr-only">Search</label>
              <input class="form-control" type="text" id="movie-search" name="query" autocomplete="off" placeholder="Search movie title"></input>
              <span class="form-control-feedback form-control-feedback-dim" aria-hidden="true">
                <i class="glyphicon glyphicon-search"></i>
              </span>
              <%= button_tag "Search", type: "submit", class: "btn btn-default visible-xs-inline" %>
            </div>
          </form>

          <ul class="nav navbar-nav navbar-right navbar-no-padding">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <%= image_tag gravatar_url(current_user.email), class: "user-icon" %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu navbar-collapse" role="menu">
                  <li>
                    <%# link_to "Edit Profile", edit_user_registration_path %>
                  </li>
                  <li>
                    <%= link_to "Log out", session_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li>
                <%= link_to "Sign in", new_session_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <% flash.each do |flash_type, message| %>
            <div class="alert <%= alert_class_for(flash_type) %> alert-dismissible fade in">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%= message %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
